<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/mcvCrewCard"
  style="@style/default_card_style"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/ivCrewImage"
      android:layout_width="match_parent"
      android:layout_height="225dp"
      android:scaleType="fitXY" />

    <TextView
      android:id="@+id/tvStatus"
      style="@style/default_text_view_style"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:background="@color/green"
      android:text="Active"
      android:textColor="@color/white"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/tvName"
      style="@style/default_text_view_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Crew name" />

    <TextView
      android:id="@+id/tvAgency"
      style="@style/default_text_view_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="crew agency"
      android:textStyle="normal" />

    <TextView
      android:id="@+id/tvHyperLink"
      style="@style/default_text_view_style"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:autoLink="web"
      android:text="hyperlink"
      android:textSize="12sp"
      android:textStyle="normal" />

  </LinearLayout>

</com.google.android.material.card.MaterialCardView>